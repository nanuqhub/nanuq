## -ffpe-trap=invalid|zero|overflow|underflow|inexact

%FFLAGS              %FCFLAGS

%CPP	             cpp

%LD                  %MPI_ROOT/bin/mpif90 %FCFLAGS
%LDFLAGS             -L%MPI_ROOT/compilers/lib -lacchost

%AR                  ar
%ARFLAGS             curv

%MK                  make

%USER_INC            %XIOS_INC %NCDF_INC
%USER_LIB            %XIOS_LIB %NCDF_LIB

%CC                  %MPI_ROOT/bin/mpicc
%CFLAGS              -O3
