<?xml version="1.0"?>
<simulation>

  <context id="nemo" >
    <!--
        ============================================================================================================
        =                                  definition of all existing variables                                    =
        =                                            DO NOT CHANGE                                                 =
        ============================================================================================================
    -->
    <field_definition src="./field_def_opa.xml"/>
    <!--
        ============================================================================================================
        =                                           output files definition                                        =
        =                                            Define your own files                                         =
        =                                         put the variables you want...                                    =
        ============================================================================================================
    -->

    <file_definition src="./file_def_opa.xml"/>

    <axis_definition>
      <axis id="deptht"  long_name="Vertical T levels"  unit="m" positive="down" />
      <axis id="depthu"  long_name="Vertical U levels"  unit="m" positive="down" />
      <axis id="depthv"  long_name="Vertical V levels"  unit="m" positive="down" />
      <axis id="depthw"  long_name="Vertical W levels"  unit="m" positive="down" />
      <axis id="nfloat"  long_name="Float number"       unit="1"                 />
      <axis id="icbcla"  long_name="Iceberg class"      unit="1"                 />
      <axis id="ncatice" long_name="Ice category"       unit="1"                 />
      <axis id="iax_20C" long_name="20 degC isotherm"   unit="degC"              />
      <axis id="iax_28C" long_name="28 degC isotherm"   unit="degC"              />
    </axis_definition>

    <domain_definition src="./domain_def_opa.xml"/>

    <grid_definition   src="./grid_def_opa.xml"/>

  </context>



  <context id="nanuq" >
    <!--
        ============================================================================================================
        =                                  definition of all existing variables                                    =
        =                                            DO NOT CHANGE                                                 =
        ============================================================================================================
    -->
    <field_definition src="./field_def_nanuq.xml"/>
    <!--
        ============================================================================================================
        =                                           output files definition                                        =
        =                                            Define your own files                                         =
        =                                         put the variables you want...                                    =
        ============================================================================================================
    -->
    <file_definition src="./file_def_nanuq.xml" />

    <axis_definition src="./axis_def_nanuq.xml" />

    <domain_definition src="./domain_def_nanuq.xml"/>

    <grid_definition   src="./grid_def_nanuq.xml"/>

  </context>




  <context id="xios">

    <variable_definition>

      <!--
          We must have buffer_size > jpi*jpj*jpk*8 (with jpi and jpj the subdomain size)
      -->
      <variable id="info_level"                type="int">5</variable>
      <variable id="using_server"              type="bool">false</variable>
      <variable id="using_oasis"               type="bool">true</variable>
      <variable id="oasis_codes_id"            type="string" >oceanx,nanuq</variable>

    </variable_definition>

  </context>

</simulation>
